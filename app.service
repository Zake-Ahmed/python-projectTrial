[Unit]
Description=Flask app service
[Service]
User=zake3
WorkingDirectory=/home/zake3/python-projectTrial
Environment=DATABASE_URI=sqlite:///data.db
ExecStart=/bin/sh  \
    -c 'sudo apt update &&\
    sudo apt install python3 python3-venv python3-pip &&\
    python3 -m venv venv &&\
    . ./venv/bin/activate &&\
    pip3 install -r requirements.txt &&\
    python3 create.py &&\
    python3 app.py'
[Install]
WantedBy=multi-user.target